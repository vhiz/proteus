<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Admin </a>
        </div>
      </nav>
      <ul class="nav justify-content-end nav nav-pills ">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">logout</a>
        </li>
      </ul>
      <br>
      <form action="" method="post" class="d-flex">
        <div class="input-group mb-3" >
            <span class="input-group-text" id="inputGroup-sizing-default"></span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="Search email" name="email" required>
          </div>

          <button class="btn btn-primary" type="submit">Search</button>
    </form>
      <ul class="list-group">
        <% user.forEach(users => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center"><%= users.email %>
                <span class="badge bg-primary rounded-pill"><%= users.isAdmin %> </span>
            </li>
            <button type="button" class="btn btn-info"><a href="/users/<%= users._id %> ">Info</a></button>
        <% }) %>
      </ul>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>